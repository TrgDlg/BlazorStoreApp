@page "/card/create"
@using StoreBlazor.Client.Pages

@inherits CreateCardBase
@inject IModalService modal
@inject NavigationManager NavigationManager

<PageTitle>Add your product!</PageTitle>


<table class="table">
    <thead>
        <tr class="table-header">
            <th class="header-column">Name</th>
            <th class="header-column">Type(book/cd)</th>
            <th class="header-column">Specialty Type</th>
            <th class="header-column">Specialty</th>
            <th class="header-column">Price</th>
            <th class="header-column">Pages</th>
        </tr>
    </thead>
    <tbody>
            <tr class="table-row">
                <input class="header-column" @bind-value=Product.ProductName/>
                <input class="header-column" @bind-value=Product.ProductType/>
                <input class="header-column" @bind-value=Product.SpecialtyType/>
                <input class="header-column" @bind-value=Product.Specialty/>
                <input class="header-column" @bind-value=Product.Price/>
                <input class="header-column" @bind-value=Product.Pages/>
            </tr>
    </tbody>
</table>

<div class="buttons-container">
<button onclick=@CreateOnClick>Create</button>
<button onclick="@(()=>NavigationManager.NavigateTo("/"))">Cancel</Button>
</div>

